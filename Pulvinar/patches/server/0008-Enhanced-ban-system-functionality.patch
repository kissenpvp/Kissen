+     */
+    @Contract(value = "_ -> new", pure = true)
+    private @NotNull DurationTransformer getDateTransformer(@Nullable Duration duration) {
+        return getDateTransformer(duration==null ? null:Instant.now().plusMillis(duration.toMillis()));
